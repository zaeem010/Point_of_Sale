@model List<Category>
@{
    ViewData["Title"] = "Category List";
}<div class="page-content">
    <!--breadcrumb-->
    <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
        <div class="breadcrumb-title pe-3">Category</div>
        <div class="ps-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 p-0">
                    <li class="breadcrumb-item">
                        <a href="javascript:;"><i class="bx bx-home-alt"></i></a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Lists</li>
                </ol>
            </nav>
        </div>
        <div class="ms-auto">
            <a asp-action="Create" class="btn btn-outline-primary px-5">Add New Category</a>
        </div>
    </div>
    <!--end breadcrumb-->
    <hr />
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table id="example" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>Action</th>
                            <th>Image</th>
                            <th>Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var Li in Model)
                        {
                            string imagepath = "/no-image.png";
                            if (Li.ImagePath != null)
                            {
                                imagepath = "/Uploads/" + Li.ImagePath;
                            }
                            <tr>
                                <td>
                                    <a asp-area="Pos" asp-action="Edit" asp-route-Id="@Li.Id" class="badge bg-primary" data-bs-toggle="tooltip" data-bs-placement="top" title="Click To Edit"><i class="bx bx-pencil"></i></a>
                                    @*<a asp-action="Card" asp-route-Id="@Li.Id" class="badge bg-info" data-bs-toggle="tooltip" data-bs-placement="top" title="Click To View Card"><i class="bx bx-card"></i></a>*@
                                </td>
                                <td><img src="@imagepath" alt="Image" style="height:50px;width:50px" /></td>
                                <td>@Li.Name</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>