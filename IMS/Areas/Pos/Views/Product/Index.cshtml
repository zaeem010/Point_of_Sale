@model List<Product>
@{
    ViewData["Title"] = "Product List";
}<div class="page-content">
    <!--breadcrumb-->
    <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
        <div class="breadcrumb-title pe-3">Product</div>
        <div class="ps-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 p-0">
                    <li class="breadcrumb-item">
                        <a href="javascript:;"><i class="bx bx-home-alt"></i></a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Lists</li>
                </ol>
            </nav>
        </div>
        <div class="ms-auto">
            <a asp-action="Create" class="btn btn-outline-primary px-5">Add New Product</a>
        </div>
    </div>
    <!--end breadcrumb-->
    <hr />
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table id="example" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>Action</th>
                            <th>Category</th>
                            <th>Sub Cat</th>
                            <th>Sku/Barcode</th>
                            <th>Name</th>
                            <th>Purchase Price</th>
                            <th>Sale Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var Li in Model)
                        {
                            string imagepath = "/no-image.png";
                            if (Li.ImagePath != null)
                            {
                                imagepath = "/Uploads/" + Li.ImagePath;
                            }
                            <tr>
                                <td>
                                    <a asp-action="Edit" asp-route-Id="@Li.Id" class="btn btn-primary" data-bs-toggle="tooltip" data-bs-placement="top" title="Click To Edit"><i class="bx bx-pencil"></i></a>
                                    <a asp-action="Delete" asp-route-Id="@Li.Id" class="btn btn-danger" data-bs-toggle="tooltip" data-bs-placement="top" title="Click To Delete"><i class="bx bx-trash"></i></a>
                                    @*<a asp-action="Card" asp-route-Id="@Li.Id" class="badge bg-info" data-bs-toggle="tooltip" data-bs-placement="top" title="Click To View Card"><i class="bx bx-card"></i></a>*@
                                <img src="@imagepath" alt="Image" style="height:50px;width:50px" />
                                </td>
                                <td>@Li.Category.Name</td>
                                <td>
                                    @{ if (Li.SubCategory != null)
                                       {
                                        <span>@Li.SubCategory.Name</span>
                                       }
                                    }
                                </td>
                                <td>@Li.Sku</td>
                                <td>@Li.Name</td>
                                <td>@Li.PurchasePrice</td>
                                <td>@Li.SalePrice</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>