@model Supplier
@{
    ViewData["Title"] = "Add New Supplier";
}
<div class="page-content">
    <!--breadcrumb-->
    <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
        <div class="breadcrumb-title pe-3">Supplier</div>
        <div class="ps-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 p-0">
                    <li class="breadcrumb-item">
                        <a href="javascript:;"><i class="bx bx-home-alt"></i></a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Add new Supplier</li>
                </ol>
            </nav>
        </div>
        <div class="ms-auto">
            <a asp-action="Index" class="btn btn-outline-primary px-5">Supplier List</a>
        </div>
    </div>
    <!--end breadcrumb-->
    <div class="row">
        <div class="col-xl-12 mx-auto">
            <hr>
            <div class="card border-top border-0 border-4 border-primary">
                <div class="card-body p-5">
                    <div class="card-title d-flex align-items-center">
                        <div>
                            <i class="bx bxs-user me-1 font-22 text-primary"></i>
                        </div>
                        <h5 class="mb-0 text-primary">Supplier Registration</h5>
                    </div>
                    <hr>
                    <form class="row g-3" asp-action="Save" enctype="multipart/form-data" method="post">
                        <div class="col-md-4">
                            <label class="form-label">Name</label>
                            <input type="text" asp-for="Name" class="form-control">
                            <span class="text-danger" asp-validation-for="Name"></span>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Company Name</label>
                            <input asp-for="Company" class="form-control">
                            <span class="text-danger" asp-validation-for="Company"></span>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Address</label>
                            <input asp-for="Address" class="form-control">
                            <span class="text-danger" asp-validation-for="Address"></span>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">NTN</label>
                            <input asp-for="NTN" class="form-control">
                            <span class="text-danger" asp-validation-for="NTN"></span>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">GST in %</label>
                            <input asp-for="Gst" class="form-control">
                            <span class="text-danger" asp-validation-for="Gst"></span>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Special Discount in %</label>
                            <input asp-for="SpDis" class="form-control">
                            <span class="text-danger" asp-validation-for="SpDis"></span>
                        </div>
                        <hr />
                        <h6>Bank Details</h6>
                        <div class="col-md-4">
                            <label class="form-label">Bank Name</label>
                            <input asp-for="BanckName" class="form-control">
                            <span class="text-danger" asp-validation-for="BanckName"></span>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Account No</label>
                            <input asp-for="AccountNo" class="form-control">
                            <span class="text-danger" asp-validation-for="AccountNo"></span>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Account Holder</label>
                            <input asp-for="AccountHolder" class="form-control">
                            <span class="text-danger" asp-validation-for="AccountHolder"></span>
                        </div>

                        <div class="col-12">
                            <button type="submit" class="btn btn-primary px-5">Submit/Update</button>
                        </div>
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="ThirdLevelId" />
                        <input type="hidden" asp-for="Verify" />
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!--end row-->
</div>
<partial name="_ValidationScriptsPartial" />